@model Uur.Northwind.MvcWebUI.Models.ProductListViewModel

@{
    Layout = "~/Views/_Layout.cshtml";
}
<div class="table-responsive">
    <table class="table">
        <tr>
            <td>Product Name</td>
            <td>Unit Price</td>
            <td>UnitStock</td>
            <td></td>
        </tr>
        @foreach (var product in Model.products)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitsInStock</td>
                <td><a class="btn btn-xs btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId">Add To Cart</a></td>
            </tr>
        }
    </table>
 
</div> 

<product-list-pager current-category="@Model.CurrentCategory" current-page="@Model.CurrentPage" page-count="@Model.PageCount" page-size="@Model.PageSize"></product-list-pager>